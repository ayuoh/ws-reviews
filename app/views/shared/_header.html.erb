<header class="px-4 py-4 md:p-4 border-b border-gray-300 fixed w-full z-20 top-0 start-0 bg-[rgba(255,255,255,0.8)]">
  <div class="flex justify-between">
    <h1 class="flex items-center">
      <%= link_to root_path do %>
        <%= image_tag  'logo.png', class: 'block max-w-full w-[80px] md:w-[95px]' %>
      <% end %>
    </h1>

    <div class="flex items-center">
      <%= link_to '投稿', new_review_path, class: 'mr-2 md:mr-3 px-2 md:px-4 py-1 md:py-2 shadow rounded-lg bg-[rgb(115,207,223)] hover:bg-[rgb(105,189,204)] transition-colors text-sm md:text-base text-white' %>

      <div>
        <button data-collapse-toggle="navbar-sticky" type="button" class="flex items-center"  aria-controls="navbar-sticky" aria-expanded="false">
          <%= image_tag  current_user.avatar, class: 'block rounded-[50%] max-w-full w-[40px] md:w-[40px] h-[40px] md:h-[40px]' %>
        </button>
      </div>
    </div>
  </div>

  <div class="hidden w-full" id="navbar-sticky">
    <div class="flex justify-end">
      <ul class="flex flex-col mt-3 font-medium border border-gray-100 rounded-lg bg-gray-50 rtl:space-x-reverse w-1/2 md:w-1/3">
        <li>
          <%= link_to t('views.header.index'), root_path, class: 'block text-sm sm:text-base w-full text-[rgb(115,207,223)] hover:text-[rgb(105,189,204)] px-2 pt-2 pb-1' %>
        </li>
        <li>
          <%= link_to t('views.header.posted'), own_path(current_user.twitter_name), class: 'block text-sm sm:text-base w-full text-[rgb(115,207,223)] hover:text-[rgb(105,189,204)] px-2 py-1' %>
        </li>
        <li>
          <%= link_to t('views.header.favorites'), favorites_reviews_path, class: 'block text-sm sm:text-base w-full text-[rgb(115,207,223)] hover:text-[rgb(105,189,204)] px-2 py-1' %>
        </li>
        <li>
          <%= link_to t('views.header.logout'), logout_path, class: 'block text-sm sm:text-base w-full text-[rgb(115,207,223)] hover:text-[rgb(105,189,204)] px-2 pt-1 pb-2', data: { turbo_method: :delete } %>
        </li>
      </ul>
    </div>
  </div>
</header>
