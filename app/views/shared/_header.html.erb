<header class="px-2 py-4 md:p-4 border border-gray-300 fixed w-full z-20 top-0 start-0 bg-[rgba(255,255,255,0.8)]">
  <div class="flex justify-between">
    <h1 class="flex items-center">
      <%= link_to root_path do %>
        <%= image_tag  'logo.png', class: 'block max-w-full w-[70px] md:w-[125px]' %>
      <% end %>
    </h1>

    <div class="flex items-center">
      <form>
        <input type="text" class="mr-2 md:mr-3 w-40 md:w-64 h-8 md:h-10 rounded-3xl border-gray-300 shadow-sm focus:ring-[#c9e8f8] focus:border-[#c9e8f8]">
      </form>

      <div>
        <button data-collapse-toggle="navbar-sticky" type="button" class="flex items-center"  aria-controls="navbar-sticky" aria-expanded="false">
          <%= image_tag  current_user.avatar, class: 'block rounded-[50%] max-w-full w-[40px] md:w-[40px] h-[40px] md:h-[40px]' %>
        </button>
      </div>
    </div>
  </div>

  <div class="hidden w-full" id="navbar-sticky">
    <div class="flex justify-end">
      <ul class="flex flex-col gap-1 md:gap-2 p-2 mt-3 font-medium border border-gray-100 rounded-lg bg-gray-50 rtl:space-x-reverse w-1/2 md:w-1/3">
        <li>
          <%= link_to 'プロフィール', root_path,  class: 'text-sm sm:text-base w-full text-[rgb(115,207,223)]' %>
        </li>
        <li>
          <%= link_to 'ログアウト', logout_path,  class: 'text-sm sm:text-base w-full text-[rgb(115,207,223)]', data: { turbo_method: :delete } %>
        </li>
      </ul>
    </div>
  </div>
</header>
