<div class="flex justify-around md:shadow md:rounded-lg px-3 py-4 md:p-5 md:m-10 border-b border-b-[rgb(245, 240, 230)]">
    <!-- icon -->
    <div class="basis-16 md:basis-18 mr-2 md:mr-4 text-xs">
      <%= image_tag review.user.avatar, class: 'rounded-[50%] max-w-full min-w-10 w-10' %>
    </div>

    <div class="flex-grow relative">
      <!-- review内容 -->
      <%= link_to review_path(review) do %>
        <div class="hover:text-gray-900 rounded-lg">
          <p class="text-right text-xs absolute top-0 right-0">
            <%= review.implementation_tarm %>
            <% if review.implementation_last_date < Time.now %>
              <span class="rounded ml-1 px-[5px] py-[4px] text-[0.75em] bg-[rgb(166,217,226)] font-semibold text-white">レビュー</span>
            <% else %>
              <span class="rounded ml-1 px-[5px] py-[4px] text-[0.75em] bg-[rgb(239,123,81)] font-semibold text-white">おすすめ</span>
            <% end %>
          </p>
          <h3 class="font-semibold pt-6"><%= review.title %></h3>
          <div class="mb-2 whitespace-pre-line"><%= review.content %></div>
        </div>
      <% end %>

      <!-- review対象 -->
      <% ogp = OpenGraph.new(review.web_page.url) %>
      <%= link_to review.web_page.url, target: :_blank, rel: "noopener noreferrer" do %>
        <div class="flex border border-solid border-gray-200 rounded-2xl h-20 md:h-32">
          <div class="flex items-center w-full">
            <div class="basis-[5.5rem] md:basis-40 mr-2 md:mr-3 h-full"><%= image_tag ogp.images[0], class: 'rounded-l-[0.9rem] h-full object-cover object-center' %></div>
            <div class="flex-grow flex flex-col md:flex-col-reverse pr-4">
              <p class="text-gray-400 text-[0.8rem] hidden md:block md:max-w-sm md:whitespace-nowrap overflow-hidden overflow-ellipsis"><%= ogp.description %></p>
              <p class="max-w-[10rem] md:max-w-sm whitespace-nowrap overflow-hidden overflow-ellipsis"><%= ogp.title %></p>
              <p class="text-gray-400 text-[0.8rem] max-w-[9.5rem] md:max-w-sm whitespace-nowrap overflow-hidden overflow-ellipsis"><%= review.web_page.url %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
