<%= form_with model: review, url: url, local: true do |f| %>
  <%= render partial: 'shared/error_messages', locals: { object: f.object } %>
  <div class="grid gap-4">
    <!-- タイトル -->
    <div class="mb-4">
      <div class="flex gap-1">
        <%= f.label :title, class: 'block mb-2 text-sm font-medium' %><span class="inline-block text-sm"><%= t('default.form.title_caution') %></span>
      </div>
      <%= f.text_field :title, class: 'bg-gray-50 border border-gray-300 text-sm rounded-lg focus:ring-[#c9e8f8] focus:border-[#c9e8f8] block w-full p-2.5' %>
    </div>

    <!-- URL -->
    <div class="mb-4">
      <div class="flex gap-1">
          <%= f.label :url, class: 'block mb-2 text-sm font-medium uppercase' %>
          <span class="inline-block text-sm rounded-lg text-[rgb(239,123,81)]"><%= t('default.form.required') %></span>
          <span class="ml-2 text-xs text-gray-500 mb-2 flex items-end">※Xの投稿URLなど一部使用できないURLがございます。ご了承ください。</span>
      </div>
      <%= f.url_field :url, required: true, value: @url, class: 'bg-gray-50 border border-gray-300 text-sm rounded-lg focus:ring-[#c9e8f8] focus:border-[#c9e8f8] block w-full p-2.5', placeholder: t('default.form.url_placeholder') %>
    </div>

    <!-- 実施期間-->
    <div>
      <div class="flex gap-1">
          <%= f.label :implementation_start_date, class: 'block mb-2 text-sm font-medium' %>
          <span class="inline-block text-sm rounded-lg text-[rgb(239,123,81)]"><%= t('default.form.required') %></span>
      </div>
      <div class="flex items-center gap-2 mb-4">
        <div class="w-2/5 md:w-1/3">
          <%= f.date_field :implementation_start_date, required: true, class: 'bg-gray-50 border border-gray-300 text-sm rounded-lg focus:ring-[#c9e8f8] focus:border-[#c9e8f8] block w-full p-2.5' %>
        </div>
        〜
        <div class="w-2/5 md:w-1/3">
          <%= f.date_field :implementation_last_date, required: true, class: 'bg-gray-50 border border-gray-300 text-sm rounded-lg focus:ring-[#c9e8f8] focus:border-[#c9e8f8] block w-full p-2.5' %>
        </div>
      </div>
    </div>

    <!-- 内容 -->
    <div class="mb-4">
      <div class="flex gap-1">
          <%= f.label :content, class: 'block mb-2 text-sm font-medium' %>
          <span class="inline-block text-sm rounded-lg text-[rgb(239,123,81)]"><%= t('default.form.required') %></span><span class="inline-block text-sm"><%= t('default.form.content_caution') %></span>
      </div>
      <%= f.text_area :content, required: true, class: 'bg-gray-50 border border-gray-300 text-sm rounded-lg focus:ring-[#c9e8f8] focus:border-[#c9e8f8] block w-full p-2.5 h-40', placeholder: t('default.form.content_placeholder') %>
    </div>

    <!-- タグ -->
    <div class="mb-4" data-controller="tag">
      <%= f.label :tag_names, class: 'block mb-2 text-sm font-medium' %>
      <%= f.text_field :tag_names, value: @tags, id: 'tags-input', class: 'tagify bg-gray-50 border border-gray-300 text-sm rounded-lg focus:ring-[#c9e8f8] focus:border-[#c9e8f8] block w-full p-2.5', placeholder: t('default.form.tag_placeholder'), data: { target: 'tagify.tagify'} %>
    </div>

    <!-- アコーディオン -->
    <div id="accordion-flush" data-accordion="collapse" data-active-classes="bg-white" data-inactive-classes="text-gray-500">
      <div id="accordion-flush-heading-1">
        <button type="button" class="flex items-center justify-between w-full py-4 font-medium rtl:text-right text-sm text-gray-500 border-b border-gray-200 gap-3" data-accordion-target="#accordion-flush-body-1" aria-expanded="false" aria-controls="accordion-flush-body-1">
          <span><%= t('default.form.more_information?') %></span>
          <svg data-accordion-icon class="w-3 h-3 shrink-0 group-open:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 10 6">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5 5 1 1 5"/>
          </svg>
        </button>
      </div>

      <div id="accordion-flush-body-1" class="" aria-labelledby="accordion-flush-heading-1">
        <div class="py-5">
          <!-- 開催地 -->
          <div class="mb-4">
            <%= f.label :prefecture, class: 'block mb-2 text-sm font-medium' %>
            <%= f.select :prefecture, Review.prefectures, { include_blank: '' }, class: 'bg-gray-50 border border-gray-300 text-sm rounded-lg focus:ring-[#c9e8f8] focus:border-[#c9e8f8] block w-full p-2.5' %>
          </div>

          <!-- 応募期間 -->
          <div>
            <%= f.label :recruitment_start_date, class: 'block mb-2 text-sm font-medium' %>
            <div class="flex items-center gap-2 mb-4">
              <div class="w-2/5 md:w-1/3">
                <%= f.date_field :recruitment_start_date, class: 'bg-gray-50 border border-gray-300 text-sm rounded-lg focus:ring-[#c9e8f8] focus:border-[#c9e8f8] block w-full p-2.5' %>
              </div>
              〜
              <div class="w-2/5 md:w-1/3">
                <%= f.date_field :recruitment_last_date, class: 'bg-gray-50 border border-gray-300 text-sm rounded-lg focus:ring-[#c9e8f8] focus:border-[#c9e8f8] block w-full p-2.5' %>
              </div>
            </div>
          </div>

          <!-- 料金 -->
          <div class="mb-4">
            <%= f.label :fee, class: 'block mb-2 text-sm font-medium' %>
            <%= f.text_field :fee, class: 'bg-gray-50 border border-gray-300 text-sm rounded-lg focus:ring-[#c9e8f8] focus:border-[#c9e8f8] block w-full p-2.5', placeholder: t('default.form.fee_placeholder') %>
          </div>

          <!-- 対象 -->
          <div class="mb-4">
            <%= f.label :target, class: 'block mb-2 text-sm font-medium' %>
            <%= f.select :target, Review.targets_for_select, {}, class: 'bg-gray-50 border border-gray-300 text-sm rounded-lg focus:ring-[#c9e8f8] focus:border-[#c9e8f8] block w-full p-2.5' %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <%= f.submit t(submit), class: "block mx-auto align-center w-1/2 md:w-1/3 px-5 py-3 mt-4 md:mt-6 text font-medium text-center text-white shadow bg-[rgb(115,207,223)] hover:bg-[rgb(105,189,204)] transition-colors rounded-lg focus:ring-4 focus:ring-[#c9e8f8]" %>
<% end %>
