<%# Link showing page number
  - available local variables
    page:          a page object for "this" page
    url:           url to this page
    current_page:  a page object for the currently displayed page
    total_pages:   total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote
-%>
<span class="border border-gray-300 text-gray-500<%= ' rounded-s-lg border-r-0' if page.first? %><%= ' rounded-e-lg border-l-0' if page.last? %><%= ' text-gray-700 bg-[rgba(166,217,226,.2)] px-3 h-8 flex items-center justify-center' if page.current? %><%= ' bg-white hover:bg-gray-100 hover:text-gray-700' unless page.current? %>" <% 'aria-current="page"' if page.current? %>>
  <%= link_to_unless page.current?, page, url, {remote: remote, rel: page.rel, class: 'flex items-center justify-center px-3 h-full'} %>
</span>
